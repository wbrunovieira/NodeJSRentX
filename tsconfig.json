{
  "compilerOptions": {
    
    "target": "es5",                           
    "module": "commonjs",                                     
    "rootDir": "./",  
    "outDir": "./dist",
                           

    "strict": false,                           
    
     "strictNullChecks": false,              
    "strictPropertyInitialization": false,  
    
     "baseUrl": "./src",                       
     "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },                        
    "esModuleInterop": true,                 
     "experimentalDecorators": true,       
     "emitDecoratorMetadata": true,         
    "resolveJsonModule": true,
   
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
